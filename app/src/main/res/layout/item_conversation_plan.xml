<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/planHolder">
    <TextView
        android:id="@+id/conversationTitleTextView1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08 AM"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/blue_grey_500"
        app:fontFamily="sans-serif-medium" />

    <View
        android:layout_width="@dimen/spacing_large"
        android:layout_height="0dp" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_large">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/conversationImageView1"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:src="@drawable/book"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/conversationTitleTextView"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bugs #B743"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/grey_60"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/conversationDescriptionTextView"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:text="Major Category"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/grey_40" />

                    <TextView
                        android:id="@+id/conversationLastModificationDatetimeTextView"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="08:00 AM - 11:35 AM"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/grey_40"
                        app:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/conversationImageView"

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_star"
                    app:civ_border="false" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/overlay_dark_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xmlarge"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_xsmall">
                <Button
                    android:id="@+id/startConversationButton"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Start"
                    android:backgroundTint="@color/transparent"
                    android:textColor="@color/grey_60"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


                <ImageView
                    android:id="@+id/heartImageView"
                    android:layout_width="@dimen/spacing_xmlarge"
                    android:layout_height="@dimen/spacing_xmlarge"
                    android:padding="@dimen/spacing_middle"
                    android:tint="@color/grey_60"
                    android:src="@drawable/ic_favorite_black_24dp" />

                <TextView
                    android:id="@+id/userFavoritesNumberTextView"
                    android:layout_width="@dimen/spacing_xmlarge"
                    android:layout_height="@dimen/spacing_xmlarge"

                    android:tint="@color/grey_60"
                    android:text="2" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>

